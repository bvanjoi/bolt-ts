{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "lldb",
      "request": "launch",
      "name": "Debug bolt-ts",
      "program": "${workspaceFolder}/target/debug/bolt_ts_compiler", // generated by `cargo build`
      "args": ["${workspaceFolder}/tests/compiler/${TEST_CASE}/index.ts"],
      "cwd": "${workspaceFolder}/tests/compiler/${TEST_CASE}",
      "env": {
        "BOLT_TS_LOG": "debug"
      }
    }
  ]
}
