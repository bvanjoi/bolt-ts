{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "lldb",
      "request": "launch",
      "name": "Debug bolt-ts Compiler",
      "program": "${workspaceFolder}/target/debug/bolt_ts_compiler", // generated by `cargo build`
      // replace ${TEST_CASE} with the name of the test case folder you want to debug
      "args": ["${workspaceFolder}/tests/compiler/${TEST_CASE}/index.ts"],
      "cwd": "${workspaceFolder}/tests/compiler/${TEST_CASE}",
      "env": {
        "BOLT_TS_LOG": "debug"
      }
    },
    {
			"name": "Run bolt-ts Extension",
			"type": "extensionHost",
			"request": "launch",
			"args": [
				"--extensionDevelopmentPath=${workspaceFolder}/packages/vscode-extension",
        // only enable the bolt-ts extension
        "--disable-extensions"
			],
			"outFiles": [
				"${workspaceFolder}/packages/vscode-extension/dist/**/*.js"
			]
		}
  ]
}
